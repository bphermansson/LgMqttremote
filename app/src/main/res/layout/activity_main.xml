<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nu.paheco.patrik.LgTvRemote.MainActivity"
    android:background="@color/btn">


    <ImageButton
        android:id="@+id/Pup"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPreset1"
        android:layout_marginTop="52dp"
        android:adjustViewBounds="true"
        android:background="@android:color/background_light"
        android:minHeight="80dp"
        android:onClick="btnClick"
        android:text="P+"
        app:srcCompat="@mipmap/cpplus" />

    <ImageButton
        android:id="@+id/Pdwn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@android:color/background_light"
        android:minHeight="80dp"
        android:onClick="btnClick"
        android:text="P-"
        app:srcCompat="@mipmap/cpminus"
        android:layout_alignTop="@+id/btnYoutube"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/volup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="btnClick"
        android:text="Vol up"
        app:srcCompat="@mipmap/cvolplus"
        android:layout_alignTop="@+id/btnKeypad"
        android:layout_alignStart="@+id/voldwn"
        android:layout_alignEnd="@+id/voldwn" />

    <ImageButton
        android:id="@+id/voldwn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:onClick="btnClick"
        android:text="Vol down"
        app:srcCompat="@mipmap/cvolminus"
        android:layout_alignTop="@+id/btnYoutube"
        android:layout_toEndOf="@+id/btnOk" />

    <Button
        android:id="@+id/btnPreset4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPreset1"
        android:layout_alignBottom="@+id/btnPreset1"
        android:layout_marginLeft="5dp"

        android:layout_toEndOf="@+id/btnPreset3"
        android:width="15dp"
        android:background="@color/btnVol"
        android:onClick="btnClick"
        android:padding="5dp"
        android:textColor="@android:color/black" />
    <Button
        android:id="@+id/btnPreset3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPreset1"
        android:layout_alignBottom="@+id/btnPreset1"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/btnPreset2"
        android:width="15dp"
        android:background="@color/btnVol"
        android:onClick="btnClick"
        android:padding="5dp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnPreset2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPreset1"
        android:layout_alignBottom="@+id/btnPreset1"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/btnPreset1"
        android:width="15dp"
        android:background="@color/btnVol"
        android:onClick="btnClick"
        android:padding="5dp"
        android:textColor="@android:color/black"

        />

    <Button
        android:id="@+id/btnPreset1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnadown"
        android:layout_marginTop="16dp"
        android:width="10dp"

        android:background="@color/btnVol"
        android:onClick="btnClick"
        android:padding="5dp"
        android:textColor="@android:color/black"
         />

    <ImageButton
        android:id="@+id/btnPower"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minHeight="80dp"
        android:onClick="btnClick"
        app:srcCompat="@drawable/pwr" />

    <ImageButton
        android:text="Input"
        android:id="@+id/btnInput"
        android:onClick="btnClick"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/input"
        android:background="@null"

        android:minHeight="80dp"
        />

    <ImageButton
        android:id="@+id/btnKeypad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="btnClick"
        app:srcCompat="@drawable/dial"
        android:layout_above="@+id/btnYoutube"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/btnYoutube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:onClick="btnClick"
        app:srcCompat="@mipmap/cyoutube"
        android:layout_below="@+id/Pup"
        android:layout_alignStart="@+id/btnKeypad"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:id="@+id/btnaup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/btnInput"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:background="@null"
        android:maxWidth="30dp"
        android:minHeight="39dp"
        android:minWidth="39dp"
        android:onClick="btnClick"
        app:srcCompat="@drawable/up" />
    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="btnClick"
        app:srcCompat="@drawable/guide"
        android:layout_above="@id/btnaup"
        android:layout_centerInParent="true"
        />
    <ImageButton
        android:id="@+id/btnadown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        app:srcCompat="@drawable/adown"
        android:background="@null"
        android:layout_below="@+id/btnaleft"
        android:layout_toEndOf="@+id/btnaleft"
        android:minHeight="39dp"
        android:minWidth="39dp"
         />

    <ImageButton
        android:id="@+id/btnaleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        app:srcCompat="@drawable/aleft"
        android:background="@null"
        android:layout_below="@+id/btnaup"
        android:layout_toStartOf="@+id/btnaup" />

    <ImageButton
        android:id="@+id/btnaright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="btnClick"
        app:srcCompat="@drawable/aright"
        android:layout_below="@+id/btnaup"
        android:layout_toEndOf="@+id/btnaup" />

    <ImageButton
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="btnClick"
        app:srcCompat="@drawable/check"
        android:layout_alignTop="@+id/btnaright"
        android:layout_toStartOf="@+id/btnPreset4" />


</RelativeLayout>
