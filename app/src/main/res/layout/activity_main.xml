<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nu.paheco.patrik.lgmqttremote.MainActivity"
    android:background="#FFFEEE">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/infolabel" />

    <Button
        android:text="P+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/Pup"
        android:layout_below="@+id/btn4"
        android:onClick="btnClick"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/btnPgm" />

    <Button
        android:text="P-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/Pdwn"
        android:layout_below="@+id/Pup"
        android:layout_alignStart="@+id/Pup"
        android:onClick="btnClick"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/btnPgm" />

    <Button
        android:text="Vol up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volup"
        android:onClick="btnClick"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/btnVol"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/btnSvt2"
        android:layout_marginTop="41dp"
        android:layout_alignParentRight="true" />

    <Button
        android:text="Vol down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Pdwn"
        android:layout_alignStart="@+id/volup"
        android:id="@+id/voldwn"
        android:onClick="btnClick"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/btnVol" />

    <Button
        android:text="TV4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn4"
        android:onClick="btnClick"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/btn"
        android:layout_centerVertical="false"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnPower"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true" />

    <Button
            android:text="Barnkanalen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn13"
            android:onClick="btnClick"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/btn"
        android:padding="5dp"
        android:layout_below="@+id/btnPower"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="SVT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSvt2"
        android:onClick="btnClick"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/btn"
        android:padding="5dp"

        android:layout_below="@+id/btnPower"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="false" />

    <Button
        android:text="Power"
        android:id="@+id/btnPower"
        android:onClick="btnClick"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@id/infolabel"
        android:padding="30dp"
        android:layout_width="wrap_content"
        android:textSize="24sp" />

    <Button
        android:text="Input"
        android:id="@+id/btnInput"
        android:onClick="btnClick"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@id/infolabel"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:padding="30dp"
        android:textSize="24sp" />
    <Button
        android:text="Keypad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:id="@+id/btnKeypad"
        android:onClick="btnClick"
        android:layout_below="@+id/btn13"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/Pup" />

</RelativeLayout>
